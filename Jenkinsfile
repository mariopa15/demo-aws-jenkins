pipeline {    agent any    environment {        AWS_DEFAULT_REGION = "us-east-1"   // Ajusta la región según tu bucket    }    stages {        stage('Checkout') {            steps {                echo "🔄 Iniciando stage: Checkout"                git branch: 'main', url: 'https://github.com/mariopa15/demo-aws-jenkins.git'                echo "✅ Código descargado desde GitHub"            }        }        stage('Validar index.html') {            steps {                echo "🔍 Validando existencia de index.html en el workspace"                sh '''                  echo "Ruta actual:"                  pwd                                    echo "Archivos descargados en el workspace:"                  ls -l                                    if [ ! -f index.html ]; then                    echo "❌ ERROR: No se encontró index.html en el repositorio"                    exit 1                  else                    echo "✅ index.html encontrado correctamente"                  fi                '''            }        }        stage('Terraform Init') {            steps {                echo "⚙️ Ejecutando Terraform Init"                sh 'terraform init -input=false -no-color'                echo "✅ Terraform Init completado"            }        }        stage('Terraform Plan') {            steps {                echo "📋 Ejecutando Terraform Plan"                sh 'terraform plan -input=false -no-color -out=tfplan'                echo "✅ Terraform Plan completado (ver arriba el detalle de recursos)"            }        }        stage('Terraform Apply') {            steps {                echo "🚀 Ejecutando Terraform Apply"                sh 'terraform apply -input=false -auto-approve -no-color tfplan'                echo "✅ Terraform Apply finalizado"            }        }        stage('Upload index.html to S3') {            steps {                echo "📤 Subiendo index.html a S3..."                sh '''                  set -x   # Muestra cada comando ejecutado                  aws s3 cp index.html s3://pruebajenkis--use1-az4--x-s3/ --acl public-read                  set +x                  echo "✅ index.html subido correctamente a S3"                '''            }        }    }    post {        always {            echo "📜 Pipeline finalizado. Revisa los logs arriba para ver la ejecución detallada paso a paso."        }        failure {            echo "❌ El pipeline falló. Revisa el error en los logs anteriores."        }        success {            echo "🎉 Pipeline completado con éxito."        }    }}