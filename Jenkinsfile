pipeline {    agent any    stages {        stage('Checkout') {            steps {                git branch: 'main', url: 'https://github.com/mariopa15/demo-aws-jenkins.git'            }        }        stage('Validar index.html') {            steps {                sh '''                  echo "Ruta actual:"                  pwd                                    echo "Archivos descargados en el workspace:"                  ls -l                                    if [ ! -f index.html ]; then                    echo "❌ ERROR: No se encontró index.html en el repositorio"                    exit 1   # Fuerza el fallo del pipeline                  else                    echo "✅ index.html encontrado correctamente"                  fi                '''            }        }        stage('Terraform Init') {            steps {                sh 'terraform init'            }        }        stage('Terraform Plan') {            steps {                sh 'terraform plan'            }        }    }}