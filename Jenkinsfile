pipeline {    agent any    environment {        AWS_REGION = 'us-east-1'           // Cambia segÃºn tu bucket        BUCKET_NAME = 'mi-bucket-s3'       // Cambia segÃºn tu bucket    }    stages {        stage('Checkout') {            steps {                echo "ğŸ”„ Clonando repositorio"                git branch: 'main',                    url: 'https://github.com/mariopa15/demo-aws-jenkins.git'            }        }        stage('Validar index.html') {            steps {                echo "ğŸ” Validando existencia de index.html"                sh '''                    if [ ! -f index.html ]; then                        echo "âŒ index.html no encontrado"                        exit 1                    else                        echo "âœ… index.html encontrado"                    fi                '''            }        }        stage('Validate Terraform') {            steps {                echo "âš™ï¸ Verificando Terraform"                sh 'terraform -version'            }        }        stage('Terraform Init') {            steps {                echo "âš™ï¸ Ejecutando Terraform Init"                sh '''                    if [ ! -f main.tf ]; then                        echo "âš ï¸ No hay archivos de configuraciÃ³n Terraform, creando ejemplo main.tf"                        cat > main.tf <<EOLterraform {  required_providers {    aws = {      source  = "hashicorp/aws"      version = "~> 5.0"    }  }  required_version = ">= 1.13.0"}provider "aws" {  region = var.region}variable "region" {  default = "us-east-1"}EOL                    fi                    terraform init -input=false -no-color                '''            }        }        stage('Terraform Plan') {            steps {                echo "ğŸ“‹ Ejecutando Terraform Plan"                sh 'terraform plan -input=false -no-color -out=tfplan'            }        }        stage('Terraform Apply') {            steps {                echo "ğŸš€ Aplicando Terraform con auto-approve"                sh 'terraform apply -input=false -auto-approve tfplan'            }        }        stage('Upload index.html to S3') {            steps {                echo "â˜ï¸ Subiendo index.html a S3"                sh 'aws s3 cp index.html s3://$BUCKET_NAME/index.html'            }        }    }    post {        always {            echo "ğŸ“œ Pipeline finalizado. Revisa los logs."        }        success {            echo "âœ… Pipeline ejecutado correctamente"        }        failure {            echo "âŒ El pipeline fallÃ³. Revisa errores anteriores"        }    }}