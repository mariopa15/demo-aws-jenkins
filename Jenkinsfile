pipeline {    agent any    environment {        AWS_DEFAULT_REGION = "us-east-1"   // Ajusta la regiÃ³n segÃºn tu bucket    }    stages {        stage('Checkout') {            steps {                echo "ğŸ”„ Iniciando stage: Checkout"                git branch: 'main', url: 'https://github.com/mariopa15/demo-aws-jenkins.git'                echo "âœ… CÃ³digo descargado desde GitHub"            }        }        stage('Validar index.html') {            steps {                echo "ğŸ” Validando existencia de index.html en el workspace"                sh '''                  echo "Ruta actual:"                  pwd                                    echo "Archivos descargados en el workspace:"                  ls -l                                    if [ ! -f index.html ]; then                    echo "âŒ ERROR: No se encontrÃ³ index.html en el repositorio"                    exit 1                  else                    echo "âœ… index.html encontrado correctamente"                  fi                '''            }        }        stage('Terraform Init') {            steps {                echo "âš™ï¸ Ejecutando Terraform Init"                sh 'terraform init -input=false -no-color'                echo "âœ… Terraform Init completado"            }        }        stage('Terraform Plan') {            steps {                echo "ğŸ“‹ Ejecutando Terraform Plan"                sh 'terraform plan -input=false -no-color -out=tfplan'                echo "âœ… Terraform Plan completado (ver arriba el detalle de recursos)"            }        }        stage('Terraform Apply') {            steps {                echo "ğŸš€ Ejecutando Terraform Apply"                sh 'terraform apply -input=false -auto-approve -no-color tfplan'                echo "âœ… Terraform Apply finalizado"            }        }        stage('Upload index.html to S3') {            steps {                echo "ğŸ“¤ Subiendo index.html a S3..."                sh '''                  set -x   # Muestra cada comando ejecutado                  aws s3 cp index.html s3://pruebajenkis--use1-az4--x-s3/ --acl public-read                  set +x                  echo "âœ… index.html subido correctamente a S3"                '''            }        }    }    post {        always {            echo "ğŸ“œ Pipeline finalizado. Revisa los logs arriba para ver la ejecuciÃ³n detallada paso a paso."        }        failure {            echo "âŒ El pipeline fallÃ³. Revisa el error en los logs anteriores."        }        success {            echo "ğŸ‰ Pipeline completado con Ã©xito."        }    }}