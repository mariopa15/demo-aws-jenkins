pipeline {    agent any    environment {        AWS_DEFAULT_REGION = "us-east-1"   // Ajusta la regi√≥n seg√∫n tu bucket    }    stages {        stage('Checkout') {            steps {                git branch: 'main', url: 'https://github.com/mariopa15/demo-aws-jenkins.git'            }        }        stage('Validar index.html') {            steps {                sh '''                  echo "Ruta actual:"                  pwd                                    echo "Archivos descargados en el workspace:"                  ls -l                                    if [ ! -f index.html ]; then                    echo "‚ùå ERROR: No se encontr√≥ index.html en el repositorio"                    exit 1   # Fuerza el fallo del pipeline                  else                    echo "‚úÖ index.html encontrado correctamente"                  fi                '''            }        }        stage('Terraform Init') {            steps {                sh 'terraform init'            }        }        stage('Terraform Plan') {            steps {                sh 'terraform plan'            }        }        stage('Terraform Apply') {            steps {                sh 'terraform apply -auto-approve'            }        }        stage('Upload index.html to S3') {            steps {                sh '''                  echo "üì§ Subiendo index.html a S3..."                  aws s3 cp index.html s3://pruebajenkis--use1-az4--x-s3/ --acl public-read                '''            }        }    }}